<Page
    x:Class="App18_SpliView.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App18_SpliView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--
    CompactPaneLength: 最小显示宽度
    OpenPaneLength：最大显示宽度
    DisplayMode 显示样式-->
    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView x:Name="mySV" CompactPaneLength="10" OpenPaneLength="50" DisplayMode="CompactInline">
            <SplitView.Pane>
                <StackPanel>
                    <TextBlock>1111</TextBlock>
                    <TextBlock>1111</TextBlock>
                    <TextBlock>1111</TextBlock>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <StackPanel>
                    <TextBlock>2222</TextBlock>
                    <TextBlock>2222</TextBlock>
                    <TextBlock>2222</TextBlock>
                </StackPanel>
            </SplitView.Content>
        </SplitView>
        <Button Content="显示" Click="Button_Click"></Button>
    </StackPanel>
</Page>
